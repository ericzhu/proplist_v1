<p id="notice"><%= notice %></p>

<h1>My Listings</h1>


<table class="table table-condensed">
<thead>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Action</th>
  </tr>
</thead>
<tbody>
  <% @listings.each do |listing| %>
    <tr>
      <td><%= image_tag(listing.image_url(:thumb), alt: listing.name, class: 'img-rounded' ) %></td>
      <td><%= listing.name %></td>
      <td><%= truncate(listing.destription, length: 40, separator: ' ') %></td>
      <td><%= number_to_currency listing.price %></td>
      <td>
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
            Action
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
            <li role="presentation">
              <%= link_to 'Show', listing, role: 'menuitem', tabindex: -1 %>
            </li>
            <li role="presentation">
              <%= link_to 'Edit', edit_listing_path(listing), role: 'menuitem', tabindex: -1 %>
            </li>
            <li role="presentation">
              <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, role: 'menuitem', tabindex: -1 %>
            </li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
<br>

<%= link_to 'New Listing', new_listing_path, class: 'btn btn-link' %>